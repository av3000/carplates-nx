{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "../../../../dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "strict": false,
    "noImplicitReturns": false,
    "noImplicitAny": false, // Allow implicit 'any' type
    "strictNullChecks": false, // Loosen strict null checking
    "strictPropertyInitialization": false // Loosen property initialization checks
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
